    "version": "0.2.0",
    "configurations": [
        {
            "name": "Rewrite: All examples",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\rewriter\\rewrite-multiple.py",
            "args": [
                "${workspaceFolder}\\examples\\*.c",
                "${workspaceFolder}\\examples"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Rewrite: Current C File",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\rewriter\\rewrite-multiple.py",
            "console": "integratedTerminal",
            "args": [
                "${file}",
                "${fileDirname}\\${fileBasenameNoExtension}"
            ],
            "cwd": "${workspaceFolder}",
        }
    ]
}